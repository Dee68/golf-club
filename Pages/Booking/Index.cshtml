@page
@model GolfClub.Pages.Booking.IndexModel

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-page="Create" class="btn btn-outline-success">Create New</a>
</p>
<div class="row my-4">
   <table class="table table-bordered border-primary table-striped">
        <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].TeeTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Player1)/ Handicap
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Player2)/ Handicap
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Player3)/ Handicap
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Bookings[0].Player4)/ Handicap
            </th>
           <th>
               Golfer(Assigned to booking)
           </th>

                <th rowspan="3" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
@foreach (var item in Model.Bookings) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeeTime)
            </td>
            <td class="text-center">
             @Html.DisplayFor(modelItem => item.Player1.EmailAddress)
             /
             @item.Player1.Handicap
             
            </td>
            
                <td>
                @Html.DisplayFor(modelItem => item.Player2.EmailAddress)
                /
                @item.Player2.Handicap
            </td>
            
                <td>
                @Html.DisplayFor(modelItem => item.Player3.EmailAddress)
                /
                @item.Player3.Handicap
            </td>
            
                <td>
                @Html.DisplayFor(modelItem => item.Player4.EmailAddress)
                /
                @item.Player4.Handicap
            </td>
           <td>
               @Html.DisplayFor(modelItem => item.Golfer.EmailAddress)
           </td>
            
            <td>
                <div class="btn-group">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                            </svg>
                    </a> 
 
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> 

                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
<hr/>
    <div class="pagination">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.Bookings.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.Bookings.PageIndex - 1)">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= Model.Bookings.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Bookings.PageIndex ? "active" : "")">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@i">@i</a>
                    </li>
                }

                @if (Model.Bookings.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.Bookings.PageIndex + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
